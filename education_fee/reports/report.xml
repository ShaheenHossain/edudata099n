            <field name="dpi">100</field>
        </record>
        <report
            id="action_fee_receipt"
            model="account.invoice"
            string="fee Receipt"
            report_type="qweb-html"
            paperformat="legal_landscape"
            name="education_fee.report_fee_receipt"
            file="education_fee.report_fee_receipt"
        />


    </data>
</odoo>
